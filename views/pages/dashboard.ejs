<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../common/head %>
    </head>
    <body id="main">
        <header>
             <% include ../common/header %>
        </header>
        <main>
            <div onclick="closeNav()" class="container">
                <div class="">
                    <h2><%= title %></h2>
                    <br>
                </div>
                <div class="">
                    <div class="list-group pb-4">
                     		<% resources.forEach(function(resource){ %>
                        	<a href="/resources/<%= resource._id %>" class="list-group-item list-group-item-action">
							<%= resource.title %>
							</a>
                    		<% }); %>
						</div>
                </div>
            </div>
        </main>
     
        <footer>
            <% include ../common/footer %>
        </footer>
        <% include ../common/script %>
    </body>
</html> 