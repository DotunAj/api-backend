<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../common/head %>
    </head>
    <body>
        <header>
            <% include ../common/header %>
        </header>
        <main>
            <div class="container">
                <h2 class=><%= title %></h2>
                <br>
                <form action="/resources/edit/<%= resource._id %>" method="post">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title" value="<%= resource.title %>">
                    </div>
                    <div class="form-group">
                        <label for="body">Body</label>
                        <textarea class="form-control" id="body" name="body"><%= resource.body %></textarea>
                    </div>
                    <input class="btn btn-primary" type="submit" value="Submit">
                </form>
            </div>
        </main>
    
        <footer>
            <% include ../common/footer %>
        </footer>
        <% include ../common/script %>
    </body>
</html>